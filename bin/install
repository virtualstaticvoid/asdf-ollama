#!/usr/bin/env bash

set -e
set -o pipefail
# set -x # debug

ASDF_INSTALL_TYPE=${ASDF_INSTALL_TYPE:-version}
[ -n "$ASDF_INSTALL_VERSION" ] || (>&2 echo 'Missing ASDF_INSTALL_VERSION' && exit 1)
[ -n "$ASDF_INSTALL_PATH" ] || (>&2 echo 'Missing ASDF_INSTALL_PATH' && exit 1)

install_plugin() {
  local install_type=$1
  local version=$2
  local install_path=$3

  local platform=$(get_platform)
  local bin_install_path="$install_path/bin"
  local download_url="$(get_download_url $install_type $version)"

  echo "Downloading ollama from ${download_url}"

  local bin_path="${bin_install_path}/ollama"
  local tmp_download_file=$(mktemp)

  # releases for Mac since 0.5.7 use tgz for artifact
  if [ "${platform}" == "darwin" ] && [ "$(printf '%s\n' "0.5.7" "$version" | sort -rV | head -n1)" = "$version" ]; then
    mkdir -p "${bin_install_path}"
    pushd $bin_install_path > /dev/null
    curl -sSfL "$download_url" -o "$tmp_download_file"
    tar zxf "$tmp_download_file" || exit 1
    chmod +x $bin_path

  # releases for Mac and versions prior to 0.3.7 provided the binary
  elif [ "${platform}" == "darwin" ] || [ "$(printf '%s\n' "0.3.6" "$version" | sort -rV | head -n1)" = "0.3.6" ]; then
    mkdir -p "${bin_install_path}"
    pushd $bin_install_path > /dev/null
    curl -sSfL "$download_url" -o "$bin_path"
    chmod +x $bin_path

  # releases for Linux since 0.13.5 use tar.zst for artifact
  elif [ "$(printf '%s\n' "0.13.5" "$version" | sort -rV | head -n1)" = "$version" ]; then
    pushd $install_path > /dev/null
    curl -sSfL "$download_url" -o "$tmp_download_file"
    tar --zstd -xf "$tmp_download_file" || exit 1

  # everything else uses tgz for artifact
  else
    pushd $install_path > /dev/null
    curl -sSfL "$download_url" -o "$tmp_download_file"
    tar zxf "$tmp_download_file" || exit 1

  fi
}

get_platform() {
  [ "Linux" = "$(uname)" ] && echo "linux" || echo "darwin"
}

get_arch() {
  local arch=$(uname -m)
  case $arch in
    amd64 | x86_64)
      echo "amd64"
      ;;
    arm64 | aarch64)
      echo "arm64"
      ;;
    *)
      echo ""
  esac
}

get_download_url() {
  local install_type=$1
  local version=$2

  local platform=$(get_platform)
  local arch=$(get_arch)

  if [ "${platform}" == "darwin" ]; then
    # releases from 0.5.8 use tgz for artifact
    if [ "$(printf '%s\n' "0.5.8" "$version" | sort -rV | head -n1)" = "$version" ]; then
      echo "https://github.com/ollama/ollama/releases/download/v${version}/ollama-darwin.tgz"
    else
      echo "https://github.com/ollama/ollama/releases/download/v${version}/ollama-darwin"
    fi
  else
    if [ "$(printf '%s\n' "0.13.5" "$version" | sort -rV | head -n1)" = "$version" ]; then
      # releases from 0.13.5 use tar.zst for artifact
      echo "https://github.com/ollama/ollama/releases/download/v${version}/ollama-${platform}-${arch}.tar.zst"
    elif [ "$(printf '%s\n' "0.3.7" "$version" | sort -rV | head -n1)" = "$version" ]; then
      # releases from 0.3.7 use tgz for artifact
      echo "https://github.com/ollama/ollama/releases/download/v${version}/ollama-${platform}-${arch}.tgz"
    else
      echo "https://github.com/ollama/ollama/releases/download/v${version}/ollama-${platform}-${arch}"
    fi
  fi
}

install_plugin "$ASDF_INSTALL_TYPE" "$ASDF_INSTALL_VERSION" "$ASDF_INSTALL_PATH"
